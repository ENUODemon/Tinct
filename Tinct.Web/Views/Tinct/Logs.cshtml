@{
    ViewBag.Title = "Logs";
}

<h2>Logs</h2>
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" media="screen" />
<script src="~/Scripts/bootstrap-datetimepicker.min.js" charset="UTF-8"></script>


<form class="form-horizontal form-inline" action="/Tinct/Logs" method="post">
    <div class="form-group">
        <label for="dtp_input2" class="col-md-2  control-label">Date Picking</label>
        <div class="input-group date form_date col-md-4" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyymmdd">
            <input class="form-control" size="16" type="text" value="" readonly>
            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
            

        </div>
        <label class="col-md-1 control-label">TasKID</label>
        <div class="col-md-4">
            <input type="text" class="form-control" size="16" name="TaskID" />
        </div>
        <button type="submit" class="btn btn-default ">View</button>
        <input type="hidden" id="dtp_input2" value="" name="LogDate" />
  
    </div>

</form>




<table class="table table-striped">
    <tr>
        <th>Time</th>
        <th>TaskID</th>
        <th>ControllerName</th>
        <th>ActionName</th>
        <th>MachineName</th>
        <th>TaskData</th>
        <th>WaittingTaskID</th>
        <th>Status</th>
    </tr>
    @foreach (var logEntity in ViewBag.logs)
    {
        <tr>
            <td>
                @logEntity.Date
            </td>
            <td>
                @logEntity.Message.ID
            </td>
            <td>
                @logEntity.Message.Context.ControllerName
            </td>
            <td>
                @logEntity.Message.Context.ActionName
            </td>
            <td>
                @logEntity.Message.Context.NodeName
            </td>
            <td>
                @logEntity.Message.Context.TaskData
            </td>
            <td>
                @foreach (var taskID in logEntity.Message.WaitTaskIDs)
                {
                    <ul>
                        <li>taskID</li>
                    </ul>
                }
            </td>
            <td>
                @logEntity.Message.Status
            </td>
        </tr>

    }
</table>
<script type="text/javascript">
    $('.form_date').datetimepicker({

        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });

</script>

